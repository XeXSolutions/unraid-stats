<?xml version="1.0"?>
<Container version="2">
  <Name>unraid-stats</Name>
  <Repository>ghcr.io/xexsolutions/unraid-stats:latest</Repository>
  <Registry>ghcr.io</Registry>
  <Network>bridge</Network>
  <Privileged>true</Privileged>
  <Support>https://github.com/xexsolutions/unraid-stats/issues</Support>
  <Project>https://github.com/xexsolutions/unraid-stats</Project>
  <Overview>
    A simple and elegant system statistics viewer for Unraid servers.
  </Overview>
  <Category>Tools: System: Status:Stable</Category>
  <WebUI>http://[IP]:[PORT:8085]/</WebUI>
  <TemplateURL>https://raw.githubusercontent.com/xexsolutions/unraid-stats/master/unraid-stats.xml</TemplateURL>
  <Icon>https://raw.githubusercontent.com/xexsolutions/unraid-stats/master/icon.png</Icon>
  <ExtraParams>--privileged</ExtraParams>
  <Config Name="WebUI" Target="8085" Default="8085" Mode="tcp" Description="Web UI port" Type="Port" Display="always" Required="true" Mask="false">8085</Config>
  <Config Name="Appdata" Target="/config" Default="/mnt/user/appdata/unraid-stats" Mode="rw" Description="Appdata path" Type="Path" Display="advanced" Required="true" Mask="false">/mnt/user/appdata/unraid-stats</Config>
  <DonateText>If you appreciate this app, please consider donating to support its development.</DonateText>
  <DonateLink>https://github.com/sponsors/xexsolutions</DonateLink>
  <Networking>
    <Mode>bridge</Mode>
    <Publish>
      <Port>
        <HostPort>8085</HostPort>
        <ContainerPort>8085</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Data>
    <Volume>
      <HostDir>/proc</HostDir>
      <ContainerDir>/host/proc</ContainerDir>
      <Mode>ro</Mode>
    </Volume>
    <Volume>
      <HostDir>/sys</HostDir>
      <ContainerDir>/host/sys</ContainerDir>
      <Mode>ro</Mode>
    </Volume>
    <Volume>
      <HostDir>/boot/config</HostDir>
      <ContainerDir>/host/boot/config</ContainerDir>
      <Mode>ro</Mode>
    </Volume>
    <Volume>
      <HostDir>/var/local/emhttp</HostDir>
      <ContainerDir>/host/var/local/emhttp</ContainerDir>
      <Mode>ro</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/user</HostDir>
      <ContainerDir>/host/mnt/user</ContainerDir>
      <Mode>ro</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/cache</HostDir>
      <ContainerDir>/host/mnt/cache</ContainerDir>
      <Mode>ro</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/disk*</HostDir>
      <ContainerDir>/host/mnt/disk*</ContainerDir>
      <Mode>ro</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/disks</HostDir>
      <ContainerDir>/host/mnt/disks</ContainerDir>
      <Mode>ro</Mode>
    </Volume>
  </Data>
  <Environment/>
  <Labels>
    <Label Name="org.opencontainers.image.source" Value="https://github.com/xexsolutions/unraid-stats"/>
    <Label Name="org.opencontainers.image.description" Value="Unraid System Statistics Viewer"/>
    <Label Name="org.opencontainers.image.licenses" Value="MIT"/>
  </Labels>
</Container> 